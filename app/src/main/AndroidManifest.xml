<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cookandroid.flowerdesign">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Flowerdesign"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".article.ArticleUpdateActivity"
            android:exported="false"
            android:parentActivityName=".user.UserDetailActivity" />
        <activity
            android:name=".article.ArticleDetailActivity"
            android:exported="false"
            android:label="상세 화면"
            android:parentActivityName=".article.ArticleActivity" />
        <activity
            android:name=".search.MainSearchActivity"
            android:exported="false"
            android:label="검색 결과"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".user.UserStoreActivity"
            android:exported="false"
            android:label="보관함"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".user.UserDetailActivity"
            android:exported="false"
            android:label="사용자 정보"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".user.SignupActivity"
            android:exported="false"
            android:label="회원가입"
            android:parentActivityName=".user.LoginActivity" />
        <activity
            android:name=".user.LoginActivity"
            android:exported="false"
            android:label="로그인"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".article.UpdateActivity"
            android:exported="false"
            android:label="게시글 수정"
            android:parentActivityName=".article.ArticleActivity" />
        <activity
            android:name=".article.AddActivity"
            android:exported="false"
            android:label="게시글 추가"
            android:parentActivityName=".article.ArticleActivity" />
        <activity
            android:name=".article.ArticleActivity"
            android:exported="false"
            android:label="게시판"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".flower.CameraActivity"
            android:exported="false"
            android:label="인식 결과"
            android:parentActivityName=".flower.FlowerListActivity" />
        <activity
            android:name=".flower.ListDetailActivity"
            android:exported="false"
            android:label="꽃 상세 화면"
            android:parentActivityName=".flower.FlowerListActivity" />
        <activity
            android:name=".flower.FlowerListActivity"
            android:exported="false"
            android:label="꽃 목록"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".flower.TodaysActivity"
            android:exported="false"
            android:label="오늘의 꽃"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>